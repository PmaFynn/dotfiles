general {
    output_format = "i3bar"
    colors = true
    interval = 5
}

order += "cpu_usage"
order += "load"
order += "tztime local"
order += "wireless mlan0" # Replace mlan0 with your actual wireless interface name

wireless mlan0 { # Replace mlan0 with your actual wireless interface name
    format_up = "WLAN: %essid %quality %bitrate"
    format_down = "WLAN: down"
    format_quality = "%quality"
}

cpu_usage {
    format = "CPU: %usage"
}

load {
    format = "Load: %1min"
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S"
}


